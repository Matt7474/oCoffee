            <form method="POST" class="sign-in" action="/signup">
                <!--! Partie pas de compte -->
                <fieldset class="sign-up">
                    <legend>Vous n'avez pas de compte ?</legend>
                    <div class="form-container-identity">
                        <div class="identity">Vous êtes : *</div>
                            <div class="genre-Mr-Mme-container">
                                <input type="radio" value="Mr" name="genre" id="genre-Mr" required>
                                <label class="genre-Mr-Mme" for="genre-Mr">Mr</label>
                            <br>
                                <input type="radio" value="Mme" name="genre" id="genre-Mme" required>
                                <label class="genre-Mr-Mme" for="genre-Mme">Mme</label>
                            <br>
                                <input type="radio" value="non genré" name="genre" id="genre-no-genre" required>
                                <label class="genre-Mr-Mme" for="genre-no-genre">Non genré</label>
                            </div>
                        <br>
                        <div >
                            <label for="last-name" class="form-ref">Nom : *</label><br>
                            <input class="champ" type="text" name="lastname" id="last-name" placeholder="Doe" size="35" required><br>
                            
                            <label for="first-name" class="form-ref">Prénom : *</label><br>
                            <input class="champ" type="text" name="firstname" id="first-name" placeholder="John" size="35" required><br>
                            
                            <label for="mail" class="form-ref">Email : *</label><br>
                            <input class="champ" type="email" name="mail" id="mail" placeholder="john.doe@fictif.com" size="35" required><br>
                            
                            <label for="password" class="form-ref">Mot de passe : *</label><br>
                            <input class="champ" type="password" name="password" id="password" placeholder="mot de passe" size="35" required><br>
                           
                            <label for="password-confirmation" class="form-ref">Confirmation du mot de passe : *</label><br>
                            <input class="champ" type="password" name="passwordconfirmation" id="password-confirmation" placeholder="confirmation du mot de passe" size="35" required><br>
                           
                        </div>
                    </div>   
                    <button type="submit" class="form-signup-submit">
                        S'enregister
                    </button>
                </fieldset> 
            </form>
